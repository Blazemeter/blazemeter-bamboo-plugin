pipeline {
    stages {
        stage('Perform WhiteSource Scan') {
            when {
                expression {
                    return params.PERFORM_WHITESOURCE_SCAN
                }
            }
            steps {
                script {
                    def projectName = "BlazeMeterBamboo"
                    whiteSourceScan(projectName)
                }
            }
        }
    }
}